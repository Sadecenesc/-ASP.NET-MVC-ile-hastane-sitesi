@model IEnumerable<Asistan>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
	<div class="col-6">
			<h2 class="text-primary"> Asistan Listesi </h2>

	</div>
	@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
	<div class="col-6 text-end">
			<a asp-controller="Asistan" asp-action="Create" class="btn btn-primary"> 
				<i class="bi bi-plus-circle"></i> &nbsp; YENİ ASİSTAN OLUŞTUR
			</a>

	</div>
}
	</div>
	<br /> <br />

<table class="table table-bordered table-striped" style="width:100%"> 
	<thead>
    <tr>
		
		
	<th>

		AD

	</th>
			<th>

				SOYAD

			</th>
			<th>

				TELEFON

			</th>
			<th>

				E POSTA

			</th>
			<th>

				ADRES

			</th>
			<th>

					UzmanlikBolgesi

			</th>
			<th>

					USERID

			</th>
				<th>

					NobetBilgisi

				</th>
				<th>

					BolumId

				</th>
			<th></th>
		</tr>

			</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
			<td width="50%">
				@obj.Ad
			</td>

				<td width="30%">
					@obj.Soyad
				</td>
				<td width="30%">
					@obj.Telefon
				</td>
				<td width="30%">
					@obj.Eposta
				</td>
				<td width="30%">
					@obj.Adres
				</td>
				<td width="30%">
					@obj.UzmanlikBolgesi
				</td>
				<td width="30%">
					@obj.UserId
				</td>
					<td width="30%">
						@obj.NobetBilgisi
					</td>
					<td width="30%">
						@obj.BolumId
					</td>
				<td>
						@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						{
							<div class="w-75 btn-group" role="group">
								<a asp asp-controller="Asistan" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i>Edit</a>
								<a asp asp-controller="Asistan" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-trash-fill"></i>Delete</a>

							</div>
						}

					</td>
			</tr>


		}




	</tbody>
</table>
</div>
