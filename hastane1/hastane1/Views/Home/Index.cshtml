    <!-- JS KODLARI -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.10.2/dist/fullcalendar.min.js"></script>
    <script>
        $(document).ready(function () {
            let nobetListesi = JSON.parse(localStorage.getItem('nobetListesi')) || [];
            let asistanListesi = JSON.parse(localStorage.getItem('asistanListesi')) || [];

            $('#calendar').fullCalendar({
                header: false,
                defaultView: 'month',
                events: nobetListesi.map(function (nobet) {
                    const asistanBilgisi = asistanListesi.find(function (asistan) {
                        return asistan.asistanAd === nobet.asistan;
                    });

                    const asistanAd = asistanBilgisi ? asistanBilgisi.asistanAd : nobet.asistan;
                    const bolum = nobet.bolumNobet || 'Bölüm bilgisi yok';

                    return {
                        title: `${asistanAd} - ${bolum}`,
                        start: moment(nobet.nobetBaslama).format('YYYY-MM-DDTHH:mm:ss'),
                        end: moment(nobet.nobetBitis).format('YYYY-MM-DDTHH:mm:ss')
                    };
                }),
                editable: false,
                height: 350,
                eventColor: '#007bff',
                eventTextColor: '#fff'
            });
        });

    </script>
