
@model	User

<form method="post" asp-action="DeletePOST">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary"> Kullanıcı Silme </h2>
				<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Username"></label>
			<input asp-for="Username" disabled class="form-control" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Password"></label>
			<input asp-for="Password" disabled class="form-control" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Role"></label>
			<input asp-for="Role" disabled class="form-control" />
		
		</div>
		
		
			
		<button type="submit" class="btn btn-danger" style="width:180px">Sil</button>
		<a asp-controller="User" asp-action="Index" style="width:150px">Listeye  Dön </a>
		

	</div>

</form>
