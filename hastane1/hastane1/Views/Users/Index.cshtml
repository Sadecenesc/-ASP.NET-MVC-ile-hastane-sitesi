@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
	<div class="col-6">
			<h2 class="text-primary"> Kullanıcı Listesi </h2>

	</div>
	<div class="col-6 text-end">
			<a asp-controller="User" asp-action="Create" class="btn btn-primary"> 
				<i class="bi bi-plus-circle"></i> &nbsp; KULLANICI OLUŞTUR
			</a>

	</div>
	</div>
	<br /> <br />

<table class="table table-bordered table-striped" style="width:100%"> 
	<thead>
    <tr>
		
		
	<th>

		USERNAME

	</th>
			<th>

				PASSWORD

			</th>
			<th>

			ROLE

			</th>
			
		
			<th></th>
		</tr>

			</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
			<td width="50%">
				@obj.Username
			</td>

				<td width="30%">
					@obj.Password
				</td>
				<td width="30%">
					@obj.Role
				</td>
				
			
				<td>
					<div class="w-75 btn-group" role="group"> </div>
						<a asp asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i>Edit</a>
						<a asp asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-trash-fill"></i>Delete</a>

					</td>
			</tr>


		}




	</tbody>
</table>
</div>
