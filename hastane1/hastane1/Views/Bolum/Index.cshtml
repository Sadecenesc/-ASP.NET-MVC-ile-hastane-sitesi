@model IEnumerable<Bolum>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
	<div class="col-6">
			<h2 class="text-primary"> Bolum Listesi </h2>

	</div>
	@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
	<div class="col-6 text-end">
			<a asp-controller="Bolum" asp-action="Create" class="btn btn-primary"> 
				<i class="bi bi-plus-circle"></i> &nbsp; BOLUM OLUŞTUR
			</a>

	</div>
}
	</div>
	<br /> <br />

<table class="table table-bordered table-striped" style="width:100%"> 
	<thead>
    <tr>
		
		
	<th>

		BOLUM ADI

	</th>
			<th>

				HASTA SAYISI

			</th>
			<th>

			BOS YATAK SAYISI

			</th>
			<th>

			AÇIKLAMALAR

			</th>
			
			<th></th>
		</tr>

			</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
			<td width="50%">
				@obj.BolumAdi
			</td>

				<td width="30%">
					@obj.HastaSayisi
				</td>
				<td width="30%">
					@obj.BosYatakSayisi
				</td>
				<td width="30%">
					@obj.Aciklamalar
				</td>
				
				<td>
						@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						{
							<div class="w-75 btn-group" role="group"> </div>
							<a asp asp-controller="Bolum" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i>Edit</a>
							<a asp asp-controller="Bolum" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-trash-fill"></i>Delete</a>
						}
					</td>
			</tr>


		}




	</tbody>
</table>
</div>
